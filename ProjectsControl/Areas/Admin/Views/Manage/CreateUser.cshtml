@using Microsoft.AspNetCore.Identity;
@model IdentityUser;

@{
    ViewData["Title"] = "Crear Usuario ";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}


<h2>
    Crear Usuario
</h2>
<p>
    Ingrese la información solicitada
</p>



<form asp-controller="Manage" asp-action="PostEditUser" method="post">
    <input type="hidden" name="Id" asp-for="Id" value="@Model.Id" />
    <table class="table table-sm">
        <tbody>
            <tr>
                <td>
                    Nombre Usuario
                </td>
                <td>
                   <input asp-for="UserName" class="form-control form-control-sm" name="UserName" placeholder="Sample"  required />    
                </td>
            </tr>
            <tr>
                <td>
                    Correo
                </td>
                <td>
                      <input asp-for="Email" class="form-control form-control-sm" name="Email" placeholder="sample@email.com" required />   
                </td>
            </tr>
            <tr>
                <td>
                        Telefono
                </td>
                <td>
                        <input asp-for="PhoneNumber" class="form-control form-control-sm" name="PhoneNumber" required />
                </td>
            </tr>
          
            <tr>
                <td>
                        Contraseña
                </td>
                <td>
                        <input type="password" asp-for="PasswordHash" class="form-control form-control-sm" name="PasswordHash" required />
                </td>
            </tr>                        
            <tr>
                <td>
                        Estado del Usuario
                </td>
                <td>
                        <select asp-for="EmailConfirmed" class="form-control form-control-sm" name="EmailConfirmed" >
                            <option value="@true">Activo</option>
                            <option value="@false">Inactiva</option>                            
                        </select>
                </td>
            </tr>            
        </tbody>
    </table>
    <div class="d-flex flex-row">
        <input class="btn btn-sm btn-outline-success" type="submit"  value="Agregar" />
        <button class="btn btn-sm btn-outline-info">
            <a asp-controller="Manage" asp-action="ListOfUsers">
                Regresar
            </a>
        </button>
    </div>
</form>