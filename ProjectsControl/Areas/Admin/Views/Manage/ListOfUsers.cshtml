@using Microsoft.AspNetCore.Identity
@model List<IdentityUser>

@{
    ViewData["Title"] = "Lista de Usuarios ";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<h1 class="h1">
    Lista de Usuarios
</h1>

<a>Agregar Nuevo usuario</a>
<hr />

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                Estado
            </th>
            <th>
                Nombre
            </th>                        
            <th>
                Correo Electronico
            </th>
            <th>
                Numero de Telefono
            </th>
            <td colspan="4" class="text-center">
                Acciones
            </td >
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if(item.EmailConfirmed == true){
                        <i class="text-success">Activo</i>
                    }else{
                        <i class="text-danger">Inactivo</i>
                    }
                </td>                
                <td>
                    @item.UserName
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.PhoneNumber
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="ViewUser" asp-route-id="@item.Id">
                        Ver
                    </a>
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-controller="Manage" asp-action="EditUser" asp-route-id="@item.Id">
                        Editar
                    </a>
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-controller="Manage" asp-action="ChangePassword" asp-route-id="@item.Id">
                        Contraseña
                    </a>
                </td>
                <td>
                    <a class="btn btn-danger btn-sm" asp-action="DeleteUser" asp-route-id="@item.Id">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table> 