@model ProjectsControl.Models.Bill

@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear</h1>

<h4>Factura</h4>
<hr />


<div class="container py-5">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label class="control-label">Id de Factura</label>
                        <input asp-for="BillId" class="form-control"value="@Guid.NewGuid().ToString()"  readonly />
                        <span asp-validation-for="BillId" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label class="control-label">Numero de Factura</label>
                        <input asp-for="NumberOfBill" class="form-control" />
                        <span asp-validation-for="NumberOfBill" class="text-danger"></span>
                    </div>
                 </div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label class="control-label">Fecha de Creación</label>
                        <input asp-for="DateOfCreation" class="form-control" />
                        <span asp-validation-for="DateOfCreation" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label class="control-label">Autor</label>
                        <input asp-for="Author" class="form-control" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                 </div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label class="control-label">Monto</label>
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label class="control-label">Id de Proyecto</label>
                        <select asp-for="ProjectId" class ="form-control" >
                        @foreach (Project i in ViewBag.Projects)
                        {
                        <option value="@i.ProjectId">N°-@i.NumberOfProject - @i.ProjectName</option>
                        }
                        </select>
                    </div>
                 </div>
                <input type="submit" value="Crear" class="btn btn-primary" />
            </form>
        </div>
    </div>
</div>







<div>
    <a asp-action="Index" class="btn btn-secondary">Volver Atrás</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
