@model ProjectsControl.Models.Employee

@{
    ViewData["Title"] = $"Detalles {Model.Name}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles</h1>

<div>
    <h4>Empleado</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Fecha de Contratación
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateofHiring)
        </dd>
        <dt class = "col-sm-2">
            Posición
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Position)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn btn-primary">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Volver Atrás</a>
</div>



<div>
    <h2>
        Historial de Acciones de Personal Registradas
    </h2>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Titulo
                </th>
                <th>
                    Fecha Creación
                </th>
                <th>
                    Autor
                </th>
                <th>
                    Tipo
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.actions)
            {
                <tr>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.DateOfCreation
                    </td>
                    <td>
                        @item.Author
                    </td>
                    <td>
                        @item.TypeOfAction
                    </td>
                    <td>
                        <a asp-controller="Actions" asp-action="Edit" asp-route-id="@item.ActionId" class="btn btn-primary">Editar</a> 
                    </td>
                    <td>
                        <a asp-controller="Actions" asp-action="Details" asp-route-id="@item.ActionId" class="btn btn-info">Detalles</a> 
                    </td>
                    <td>
                        <a asp-controller="Actions" asp-action="Delete" asp-route-id="@item.ActionId" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>