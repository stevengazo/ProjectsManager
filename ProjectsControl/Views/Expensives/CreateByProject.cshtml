@model ProjectsControl.Models.Expensive

@{
    ViewData["Title"] = "Crear Gasto de Proyecto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear</h1>

<h4>Gasto</h4>
<hr />
<div >
    <div >
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-none" >
                <label class="control-label">Id Referencia Gasto</label>
                <input asp-for="ExpensiveId" class="form-control" value="@Guid.NewGuid().ToString()" readonly />
                <span asp-validation-for="ExpensiveId" class="text-danger"></span>
            </div>
            <div class="d-none">
                <label class="control-label">Id de Referencia de Proyecto</label>
                <input asp-for="ProjectId" class="form-control" value="@ViewBag.ProjectId" readonly />
            </div>
            <div class="form-group">
                <label class="control-label">Autor</label>
                <input asp-for="Author" class="form-control" value="@User.Identity.Name" readonly />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">ultima modificacion</label>
                <input asp-for="LastModification" class="form-control" />
                <span asp-validation-for="LastModification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Tipo</label>
                <select asp-for="Type" class="form-control">
                    <option value="Kilometraje">"Kilometraje"</option>
                    <option value="Materiales Varios">Materiales Varios</option>
                    <option value="Materiales Mecsa">Materiales Mecsa</option>
                    <option value="Viaticos">Viaticos</option>
                    <option value="Gastos Administrativos">Gastos Administrativos</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Monto</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Moneda</label>
                <input asp-for="Currency" class="form-control" />
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Notas</label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
