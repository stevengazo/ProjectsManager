@model ProjectsControl.Models.Action

@{
    ViewData["Title"] = $"Detalles la Accion de Personal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles de la acción de Personal</h1>

<div>   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Titulo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Creación
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfCreation)
        </dd>
        <dt class = "col-sm-2">
            Autor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class = "col-sm-2">
            Tipo de Acción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TypeOfAction)
        </dd>
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            ¿Esta Activa?
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class = "col-sm-2">
            Empleado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ActionId" class="btn btn-primary" >Editar</a> |
    <a asp-action="Index" class="btn btn-secondary" >Atras</a>
    <a asp-action="PrintableView"  asp-route-id="@Model.ActionId" class="btn btn-secondary" >Imprimible</a>
</div>
