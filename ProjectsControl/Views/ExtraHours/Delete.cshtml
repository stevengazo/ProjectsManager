@model ProjectsControl.Models.ExtraHour

@{
    ViewData["Title"] = $"Borrar Tiempo Extra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Borrar</h1>

<h3>¿Está seguro que desea elminar este registro?</h3>
<div>
    <h4>Tiempo extra</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Inicio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BeginTime)
        </dd>
        <dt class = "col-sm-2">
            Finalización
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndTime)
        </dd>
        <dt class = "col-sm-2">
            Tipo de tiempo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TypeOfHour)
        </dd>
        <dt class = "col-sm-2">
            Motivo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reason)
        </dd>
        <dt class = "col-sm-2">
            Notas
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
        <dt class = "col-sm-2">
            ¿Está pagado?
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsPaid)
        </dd>
        <dt class = "col-sm-2">
            Empleado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.Name)
        </dd class>
        <dt class = "col-sm-2">
            Fecha de Asistencia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Asistance.DateOfBegin)
        </dd class>
        <dt class = "col-sm-2">
            Semana
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberOfWeek)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ExtraHourId" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Volver Atras</a>
    </form>
</div>
