@model List<ProjectsControl.Models.Asistance>

@{
    ViewData["Title"] = "Busqueda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script>
    function clean(){
        
        // JQuery
        $("#Name")[0].selectedIndex = 0;
        $("#Project")[0].selectedIndex = 0;
        $("#Week")[0].selectedIndex = 0;
        //Limpieza de fecha
        $("input[type=date]").val("")       
    }
</script>

<h1>Buscar Asistencias</h1>


<p>
    <a asp-action="Create">Registrar asistencia</a>
</p>

<form asp-controller="Asistances" asp-action="Search" method="get">
    <div class="form-group row">
        <div class="col">
            <label class="col-form-label">Empleado</label>
            <select id="Name" style="background-color: #f5f5f5;" class="rounded form-control" name="NameToSearch" >
                <option value="0"></option>
                @foreach (Employee item in  ViewBag.Employees )
                   {
                       <option value="@item.EmployeeId">@item.Name</option>
                   }
           </select>
        </div>
        <div class="col">
            <label class="col-form-label">Proyecto</label>           
            <select id="Project"  style="background-color: #f5f5f5;" class="rounded form-control" name="ProjectToSearch">
              <option value="0"></option>
                @foreach (Project item in ViewBag.Projects)
               {
                   <option value="@item.ProjectId">@item.NumberOfProject - @item.ProjectName</option>
               }
            </select>
        </div>
        <div class="col">
            <label class="col-form-label">Número de Semana</label>
            <input type="number" id="Week" style="background-color: #f5f5f5;" class="rounded form-control" name="_WeekToSearch"  min="0" max="52"/>
        </div>
        <div class="col">
            <label class="col-form-label">Fecha</label>
            <input type="date" style="background-color: #f5f5f5;" class="rounded form-control" name="DateToSearch" placeholder="Fecha" />
        </div>                    
    </div>
    <div class="form-group row">
        <div class="col">
            <input type="submit" value="Buscar" class="btn btn-outline-info " />
        </div>
        <div class="col">
            <input type="button" value="Generar" class="btn btn-outline-success " />
        </div>
        <div class="col">
            <div type="button" class="btn btn-outline-secondary" onclick="clean()"  >Limpiar</div>
        </div>
    </div>
</form>
<p>@ViewBag.ErrorMessage</p>


<table class="table table-hover   table-striped table-responsive-sm table-bordered" style="font-size: 13px;text-align:center">
    <thead>
        <tr>
            <th>
                Día de Inicio
            </th>
            <th>
                Día Finalización
            </th>
            <th>
                Empleado
            </th>
            <th>
                Projecto
            </th>
            <th>
                N° Semana
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count!= 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td >
                        @item.DateOfBegin.ToLongDateString() -@item.DateOfBegin.ToShortTimeString()                        
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfEnd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employee.Name)
                    </td>
                    <td>
                        <a asp-controller="Projects" asp-action="Details" asp-route-id="@item.ProjectId">
                            @Html.DisplayFor(modelItem => item.Project.ProjectName)
                        </a>
                        
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfWeek)
                    </td>
                    <td>
                        <a asp-controller="ExtraHours" asp-action="addExtra" asp-route-id="@item.AsistanceId"  class="btn-sm btn-outline-success">Hora Extra</a>
                        <a asp-action="Edit" asp-route-id="@item.AsistanceId" class="btn-sm btn-outline-success">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.AsistanceId" class="btn-sm btn-outline-info">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.AsistanceId" class="btn-sm  btn-outline-danger">Borrar</a>
                    </td>
                </tr>
            }            
        }
        
    </tbody>
</table>
