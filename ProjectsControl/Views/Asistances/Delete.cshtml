@model ProjectsControl.Models.Asistance

@{
    ViewData["Title"] = "Eliminar Asistencia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Borrar Asistencia</h1>

<h3>¿Esta seguro que desea eliminar esta asistencia?</h3>
<div>
    <h4>Asistencia</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Fecha Inicio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfBegin)
        </dd>
        <dt class = "col-sm-2">
            Fecha Finalización
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfEnd)
        </dd>
        <dt class = "col-sm-2">
            Empleado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.Name);
        </dd class>
        <dt class = "col-sm-2">
            Proyecto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Project.ProjectName)
        </dd class>
        <dt class = "col-sm-2">
            N° Semana
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberOfWeek)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AsistanceId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Volver Atrás</a>
    </form>
</div>
